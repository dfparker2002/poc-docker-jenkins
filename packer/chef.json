{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "security_group_id": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-e7fb8cd7",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "run_tags": {
	"Name": "chef-solo-jetty-cookbook-{{timestamp}}"
    },
    "ami_name": "chef-solo-jetty-cookbook-{{timestamp}}",
    "security_group_id": "{{user `security_group_id`}}"
  }],
  "provisioners": [{
   "type": "shell",
   "script": "scripts/jetty.sh",
   "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
  },
  {
   "type": "chef-solo",
   "cookbook_paths": ["cookbooks"]
  }
 ]
}
