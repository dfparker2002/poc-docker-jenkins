{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "security_group_id": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-fa9cf1ca",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "run_tags": {
	"name": "base-ami-dockerize-chef{{timestamp}}"
    },
    "ami_name": "base-ami-docker-chef{{timestamp}}",
    "security_group_id": "{{user `security_group_id`}}"
  }],
  "provisioners": [{
    "type": "shell",  
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo apt-get install -y wget",
      "sudo apt-get install -y curl",
      "sudo apt-get install -y ssh",
      "sudo apt-get install -y vi",
      "sudo apt-get install -y git",
      "sudo apt-get install -y mosh",
      "sudo apt-get install -y lynx",
      "sudo apt-get install -y unzip",
      "sudo apt-get install -y debconf-utils",
      "which lynx mosh git vi wget unzip",
      "sudo apt-get install -y linux-image-generic-lts-raring linux-headers-generic-lts-raring",
      "sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 36a1d7869245c8950f966e92d8576a8ba88d21e9",
      "sudo sh -c 'echo deb http://get.docker.io/ubuntu docker main > /etc/apt/sources.list.d/docker.list'",
      "sudo reboot",
      "sudo uname -a"
    ]
  },
  {
  "type": "shell",  
    "inline": [
      "sleep 70",
      "echo waiting for reeboot"
    ]
  },
  {
  "type": "file",  
  "source": "hosts.im7",
  "destination": "/tmp/hosts.im7"
  },
  {
  "type": "shell", 
    "inline": [
     "sleep 30",
     "echo adding im7 host names to etc hosts",
     "sudo bash -c  'cat /tmp/hosts.im7 >> /etc/hosts'; more /etc/hosts",
     "mkdir docker",
     "cd docker && git clone http://github.com/radiomix/poc-docker-jenkins.git",
     "cd",
     "curl -l https://www.opscode.com/chef/install.sh | sudo bash",
     "echo installing docker",
     "sudo apt-get update",
     "sudo apt-get install -y lxc-docker",
     "sudo gpasswd -a ubuntu docker",
     "docker --version",
     "sudo service docker restart",
     "sudo apt-get -y upgrade",
     "echo installing dockerize",
     "cd docker && git clone http://github.com/cambridge-healthcare/dockerize.git",
     "sudo bash -c  'cat ./dockerize.sh >> ~/.bashrc",
     "dockerize"
   ]
  }
 ]
}
